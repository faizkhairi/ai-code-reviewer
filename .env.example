# ─── AI Providers ────────────────────────────────────────────────────────────
# OpenAI API Key — https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Anthropic API Key — https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-...

# ─── Database (Neon PostgreSQL) ──────────────────────────────────────────────
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/ai-code-reviewer?sslmode=require"

# ─── NextAuth v5 ─────────────────────────────────────────────────────────────
# Generate: openssl rand -base64 32
AUTH_SECRET="..."
NEXTAUTH_URL="https://your-app.vercel.app"

# GitHub OAuth App (user sign-in — separate from the GitHub App below)
# Create at: https://github.com/settings/developers → OAuth Apps
# Callback URL: https://your-app.vercel.app/api/auth/callback/github
AUTH_GITHUB_ID="your-oauth-app-client-id"
AUTH_GITHUB_SECRET="your-oauth-app-client-secret"

# ─── GitHub App (bot PR reviews) ─────────────────────────────────────────────
# Create at: https://github.com/settings/apps/new
# Permissions: Pull requests (read & write), Metadata (read)
# Events: Pull request, Installation
# Callback URL: https://your-app.vercel.app/github/callback
# Webhook URL:  https://your-app.vercel.app/api/webhook/github
GITHUB_APP_ID="123456"
GITHUB_APP_NAME="your-app-slug"
# Paste the PEM key as one line — newlines become literal \n
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIEo...\n-----END RSA PRIVATE KEY-----"
# Generate: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET="..."

# ─── QStash (async job queue) ────────────────────────────────────────────────
# Get from: https://console.upstash.com/qstash
QSTASH_TOKEN="..."
QSTASH_CURRENT_SIGNING_KEY="sig_..."
QSTASH_NEXT_SIGNING_KEY="sig_..."
